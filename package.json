{
  "name": "assetflow",
  "version": "1.0.0",
  "description": "A comprehensive portfolio management application for tracking stocks, ETFs, cryptocurrencies, and other assets",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --watchAll=false",
    "test:unit": "jest --testPathPattern=unit-tests",
    "test:integration": "jest --testPathPattern=integration-tests",
    "test:performance": "jest --testNamePattern='Performance Tests'",
    "lint": "echo 'No linting configured yet'",
    "audit": "npm audit --audit-level=moderate"
  },
  "keywords": [
    "portfolio",
    "finance",
    "stocks",
    "crypto",
    "investment",
    "tracking"
  ],
  "author": "AssetFlow Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["<rootDir>/tests/polyfills.js"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "globals": {
      "TextEncoder": "TextEncoder",
      "TextDecoder": "TextDecoder"
    }
  }
}
